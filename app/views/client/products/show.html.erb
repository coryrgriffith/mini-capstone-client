<p>One Product incoming!!!</p>
<p>id: <%= @product['id'] %></p>
<p>name: <%= @product['name'] %></p>
<p>supplier: <%= @product['supplier']['name'] %></p>
<p>price: <%= @product['price'] %></p>
<p>tax: <%= @product['tax'] %></p>
<p>total price: <%= @product['total_price'] %></p>
<% if @product['discounted'] %>
    <p>Discount Item</p>
  <% else %>
    <p>Everday Value</p>
  <% end %>
<% @product['categories'].each do |category| %>
  <p>group: <%= category['name'] %></p>  
<% end %>
<% @product["images"].each do |image| %>
  <p><%= image['url'] %></p>
  <% end %>
<p>description: <%= @product['description'] %></p>

<h2>Use this form below to add to your cart</h2>
<%= form_tag "/client/carted_products", method: :post do %>
  <div>
    <input type="hidden" name="product_id" value=" <%= @product['id'] %>">
  </div>
  <div>
    <input type="text" name="quantity">
  </div>
  <div>
    <input type="submit" name="add to cart">
  </div>
<% end %>
<a href="/client/products/<%= @product['id'] %>/edit">Click here to edit this product</a><br>
<a href="/client/products">Click here to return to all products</a>